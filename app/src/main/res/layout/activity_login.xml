<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.hanks.passcodeview.PasscodeView
        android:id="@+id/passcodeView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/colorPrimary"
        app:correctStateColor="@color/pureBlack"
        app:firstInputTip="@string/enter_pass"
        app:normalStateColor="@color/pureBlack"
        app:numberTextColor="@color/pureBlack"
        app:wrongInputTip="@string/password_not_match"
        app:passcodeViewType="check_passcode"
        app:wrongStateColor="@color/pureBlack" />
</layout>