<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:paddingBottom="16dp"
    android:paddingTop="24dp"
    android:paddingLeft="24dp"
    android:paddingRight="24dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="0.001"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/appName"
        android:text="@string/cloud_drives_settings_title" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_weight="2"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="270dp"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.65"
                    android:gravity="center|left"
                    android:id="@+id/dropboxTitle"
                    android:drawablePadding="10dp"
                    android:drawableLeft="@drawable/ic_dropbox"
                    android:text="Dropbox"
                    android:textSize="20sp"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/linkDropbox"
                    android:text="@string/login_button"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="270dp"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.65"
                    android:gravity="center|left"
                    android:id="@+id/gDriveTitle"
                    android:drawablePadding="10dp"
                    android:drawableLeft="@drawable/ic_google_drive"
                    android:text="@string/google_drive_title"
                    android:textSize="20sp"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/linkGDrive"
                    android:text="@string/login_button"/>

            </LinearLayout>
        </LinearLayout>

    </ScrollView>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:textColor="@color/colorBlack"
        android:background="@android:color/transparent"
        android:text="@string/button_close"
        android:id="@+id/aboutClose"
        android:layout_marginTop="20dp"
        android:layout_gravity="end"/>

</LinearLayout>