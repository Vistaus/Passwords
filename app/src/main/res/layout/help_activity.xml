<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bottom_line"
            android:orientation="vertical">

            <TextView
                android:id="@+id/help_title_1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="@string/help_add_item_quest"
                android:textSize="20sp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/help_text_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textSize="15sp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bottom_line"
            android:orientation="vertical">

            <TextView
                android:id="@+id/help_title_2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="@string/help_delete_item_quest"
                android:textSize="20sp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/help_text_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:textSize="15sp"
                android:layout_marginTop="5dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bottom_line"
            android:orientation="vertical">

            <TextView
                android:id="@+id/help_title_3"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="@string/help_edit_item_quest"
                android:textSize="20sp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/help_text_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:textSize="15sp"
                android:layout_marginTop="5dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bottom_line"
            android:orientation="vertical">

            <TextView
                android:id="@+id/help_title_6"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="@string/help_restore_key_quest"
                android:textSize="20sp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/help_text_6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bottom_line"
            android:orientation="vertical">

            <TextView
                android:id="@+id/help_title_8"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="@string/help_use_quest"
                android:textSize="20sp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/help_text_8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="@string/help_use_answer"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"/>

        </LinearLayout>
    </LinearLayout>

</ScrollView>