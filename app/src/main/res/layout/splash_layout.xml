<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/colorBlue"
    android:id="@+id/splashBg"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:visibility="gone"
        android:id="@+id/imageView"
        android:layout_marginTop="25dp"
        android:layout_gravity="center|bottom"
        android:src="@drawable/ic_key" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/app_name"
        android:layout_weight="2"
        android:id="@+id/textView"
        android:paddingTop="25dp"
        android:textColor="@color/colorWhite"
        android:textSize="40sp"
        android:gravity="center|top"
        android:layout_gravity="center_horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/loadLayout"
        android:layout_weight="0.8"
        android:visibility="gone"
        android:gravity="center|bottom"
        android:orientation="vertical">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar"
            android:layout_gravity="center_horizontal|bottom" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/loading_app_message"
            android:gravity="center|top"
            android:textSize="20sp"
            android:layout_marginBottom="25dp"
            android:layout_marginTop="15dp"
            android:textColor="@color/colorBlack"
            android:id="@+id/textView2" />

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/singleLayout"
        android:layout_gravity="center"
        android:layout_weight="0.8"
        android:visibility="gone"
        android:gravity="center|bottom"
        android:orientation="vertical">

        <EditText
            android:id="@+id/loginPass"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:ems="10"
            android:gravity="center"
            android:hint="@string/enter_pass"
            android:inputType="numberPassword"
            android:maxLength="4"
            android:textColor="@color/colorWhite"
            android:textColorHint="@color/colorWhite"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/single_screen_forgot_password_title"
            android:id="@+id/forgotPassword"
            android:onClick="onClick"
            android:visibility="visible"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textColor="@color/colorWhite"/>

        <Button
            android:id="@+id/loginButton"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="70dp"
            android:layout_marginBottom="20dp"
            android:text="@string/enter_button" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="0.8"
        android:visibility="visible"
        android:layout_gravity="center"
        android:gravity="center|bottom"
        android:id="@+id/doubleLayout">

        <EditText
            android:id="@+id/firstPass"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:ems="10"
            android:gravity="center"
            android:hint="@string/enter_pass"
            android:textColor="@color/colorWhite"
            android:textColorHint="@color/colorWhite"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:inputType="numberPassword"
            android:maxLength="4" />

        <EditText
            android:id="@+id/secondPass"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:ems="10"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:gravity="center"
            android:hint="@string/repeat_pass"
            android:inputType="numberPassword"
            android:textColor="@color/colorWhite"
            android:textColorHint="@color/colorWhite"
            android:layout_marginTop="25dp"
            android:maxLength="4"/>

        <Button
            android:id="@+id/loginSaver"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="@string/enter_button"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="20dp"
            android:textSize="18sp" />

    </LinearLayout>

</LinearLayout>