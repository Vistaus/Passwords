<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/viewActLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true" >
    <CheckBox
        android:id="@+id/editCheck"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/check_box_margin_bottom"
        android:button="@drawable/custom_checkbox"
        android:textColor="@color/colorBlack"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:textSize="@dimen/check_box_text_size" />

    <ScrollView
        android:id="@+id/viewScroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:layout_below="@+id/editCheck">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/view_container_p_bottom"
            android:paddingTop="@dimen/view_container_p_top"
            android:id="@+id/viewLinlay"
            android:focusable="true"
            android:focusableInTouchMode="true" >

            <LinearLayout
                android:id="@+id/showLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    android:id="@+id/viewLogin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_person_grey600_24dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:gravity="center_vertical"
                    android:layout_marginTop="20dp"
                    android:drawablePadding="15dp"
                    android:textSize="20sp"
                    android:padding="10dp"
                    android:text="Login"/>
                <TextView
                    android:id="@+id/viewPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_vpn_key_grey600_24dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:gravity="center_vertical"
                    android:drawablePadding="15dp"
                    android:textSize="20sp"
                    android:padding="10dp"
                    android:text="Password"/>
                <TextView
                    android:id="@+id/viewLink"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_public_grey600_24dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:gravity="center_vertical"
                    android:drawablePadding="15dp"
                    android:layout_marginTop="40dp"
                    android:textSize="19sp"
                    android:padding="10dp"
                    android:text="Link"/>
                <TextView
                    android:id="@+id/viewComment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_keyboard_grey600_24dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:gravity="center_vertical"
                    android:drawablePadding="15dp"
                    android:textSize="20sp"
                    android:padding="10dp"
                    android:text="Comments"/>

                <TextView
                    android:id="@+id/viewDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginLeft="25dp"
                    android:textSize="19sp"
                    android:padding="10dp"
                    android:gravity="center_vertical|right"
                    android:text="Date"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/editLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:layout_marginBottom="@dimen/edit_text_margin_bottom"
                    android:paddingLeft="25dp"
                    android:paddingRight="25dp">

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/add_spinner_height"
                        android:id="@+id/spinnerColor"
                        android:entries="@array/view_sticker_color"
                        android:layout_marginLeft="25dp"/>

                    <RelativeLayout
                        android:layout_width="@dimen/add_spinner_color_width"
                        android:layout_height="@dimen/add_spinner_color_height"
                        android:id="@+id/showColorRelLay"
                        android:background="@color/colorBlue"
                        android:layout_marginRight="25dp">
                    </RelativeLayout>
                </LinearLayout>

                <EditText
                    android:id="@+id/title_enter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/edit_text_margin_bottom"
                    android:ems="10"
                    android:hint="@string/item_title"
                    android:lines="1"
                    android:maxLength="32"
                    android:paddingLeft="@dimen/edit_text_padding_left_right"
                    android:paddingRight="@dimen/edit_text_padding_left_right"
                    android:singleLine="true"
                    android:layout_marginRight="25dp"
                    android:layout_marginLeft="25dp"
                    android:width="@dimen/field_width" >
                    <requestFocus />
                </EditText>

                <EditText
                    android:id="@+id/login_enter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/edit_text_margin_bottom"
                    android:ems="10"
                    android:hint="@string/item_login"
                    android:lines="1"
                    android:maxLength="24"
                    android:paddingLeft="@dimen/edit_text_padding_left_right"
                    android:paddingRight="@dimen/edit_text_padding_left_right"
                    android:singleLine="true"
                    android:layout_marginRight="25dp"
                    android:layout_marginLeft="25dp"
                    android:width="@dimen/field_width" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginBottom="@dimen/add_check_m_bottom">

                    <EditText
                        android:id="@+id/password_enter"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="@string/item_password"
                        android:inputType="textPassword"
                        android:lines="1"
                        android:layout_gravity="center_horizontal"
                        android:maxLength="32"
                        android:layout_toLeftOf="@+id/generateDialog"
                        android:paddingLeft="@dimen/edit_text_padding_left_right"
                        android:paddingRight="@dimen/edit_text_padding_left_right"
                        android:singleLine="true" />

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:id="@+id/generateDialog"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/ic_vpn_key_grey600_24dp"/>

                </RelativeLayout>

                <CheckBox
                    android:id="@+id/showPass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="left|center_vertical"
                    android:text="@string/show_pass_check"
                    android:textColor="@color/colorBlack"
                    android:layout_marginLeft="25dp"
                    android:layout_marginBottom="@dimen/add_check_m_bottom"
                    android:textSize="@dimen/check_box_text_size" />

                <EditText
                    android:id="@+id/link_enter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/edit_text_margin_bottom"
                    android:ems="10"
                    android:hint="@string/item_link"
                    android:lines="1"
                    android:maxLength="50"
                    android:paddingLeft="@dimen/edit_text_padding_left_right"
                    android:paddingRight="@dimen/edit_text_padding_left_right"
                    android:singleLine="true"
                    android:layout_marginRight="25dp"
                    android:layout_marginLeft="25dp"
                    android:width="@dimen/field_width" />

                <EditText
                    android:id="@+id/comment_enter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/edit_text_margin_bottom"
                    android:ems="10"
                    android:hint="@string/item_comment"
                    android:inputType="textMultiLine"
                    android:lines="1"
                    android:maxLength="100"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/edit_text_padding_left_right"
                    android:paddingRight="@dimen/edit_text_padding_left_right"
                    android:singleLine="true"
                    android:layout_marginRight="25dp"
                    android:layout_marginLeft="25dp"
                    android:width="@dimen/field_width" />

                <EditText
                    android:id="@+id/date_enter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/add_edit_m_bottom"
                    android:ems="10"
                    android:hint="@string/item_date"
                    android:inputType="date"
                    android:lines="1"
                    android:maxLength="18"
                    android:paddingLeft="@dimen/edit_text_padding_left_right"
                    android:paddingRight="@dimen/edit_text_padding_left_right"
                    android:singleLine="true"
                    android:layout_marginRight="25dp"
                    android:layout_marginLeft="25dp"
                    android:width="@dimen/field_width" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>